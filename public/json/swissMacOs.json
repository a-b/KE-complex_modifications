{
    "title": "Swiss Keyboard Layout for macOS",
    "rules": [
        {
            "description": "Basic Swiss keyboard layout adjustments. For example [ctrl+c = copy] and [ctrl+v = paste].",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_control"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_control"
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "2",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "g",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "2",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "g",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
